<odoo>

	<record  id="owner_view_tree" model="ir.ui.view">
		<field name="name">owner tree</field>
		<field name="model">owner</field>
		<field name="arch" type="xml"> 
			<tree class="header_custom">
			<field name="name" required="1"/>
				 <field name="phone"/>
				 <field name="address" /> 
			
			
			
			</tree>
		 </field>
		</record>
		
		<record id="owner_form"  model="ir.ui.view">
		<field name="name">owner form</field>
		<field name="model">owner</field>
		<field name="arch" type="xml"> 
			
		<form>
			<group>
			<field name="name">name</field>
			<field name="phone"/>
			<field name="address"/>
			</group>
			
		
		</form>
		 </field>
		</record>

		
		
		<record  id="owner_action" model="ir.actions.act_window">
		<field name="name">Owner action</field>
		<field name="res_model">owner</field>

	</record>
	
	<menuitem
	id = "owner_menu_item"
	name = "Owners"
	parent = "config_menu"
	action = "owner_action"
	/>

	
</odoo>