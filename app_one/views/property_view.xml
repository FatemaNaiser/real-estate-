<odoo>
	

	<record id="property_form"  model="ir.ui.view">
		<field name="name">property form</field>
		<field name="model">property</field>
		<field name="arch" type="xml"> 
			
	<form string="Property item" create="false" class="header_custom">
		 <header>
		<button name="o" type="object" class="btn-primary" string="Action"/>		
		<button name="action_draft" type="object" class="btn-primary" string="Make draft"/>
		<button name="action_pending" type="object" class="btn-primary" string="pending"/>
	
		 </header>
		  <sheet>
			  <div name="button-box" class="oe_button_box">
				 <button name="action_owner"
				  type="object" 
				  class="btn-primary"
				  string="Owner form"
				  icon= "fa-user"/>
			  </div>
		
		
			
			
			<group>
				
			<field name="name" required="1" readonly="state == 'closed'"/> 
			<field name="discription"/> 
			<field name="postcode"/>
			<field name="data_available"/>
			<field name="expected_price"/>
			<field name="expected_selling_date"/>
			<field name="is_late"/>
			<field name="selling_price"/>
			<field name="dif"/>
			<field name="garden"/>
			<field name="owner_id"/>
			<field name="owner_Address"/>
			<field name="owner_phone"/>
			<field name="tag_ids" widget="many2many_tags"/>
			<field name="state"/>
			</group>
			<notebook>
				<page string="Bedrooms">
					<field name="line_ids">
						<tree editable="bottom">
							<field name="description"/>
							<field name="area"/>
						</tree>
					
					</field>
				</page>
			</notebook>
			
			
		  </sheet>
		  <div class="oe_chatter">
		  <field name="message_follower_ids" />
		  <field name="activity_ids" />
		  <field name="message_ids" />
		  </div>
		  
	</form>
		 </field>
		</record>
	
	
	
		<record id="property_tree"  model="ir.ui.view">
		<field name="name">property tree</field>
		<field name="model">property</field>
		<field name="arch" type="xml"> 
			
	<tree class="header_custom" decoration-danger="(is_late)">		
			<field name="name" /> 
			<field name="postcode"/>
			<field name="data_available"/>
			<field name="expected_price"/>
			<field name="expected_selling_date"/>
			<field name="is_late"/>
			<field name="selling_price"/>
			<field name="garden"/>
			<field name="state"/>
		  
	</tree>
		 </field>
		</record>
	

	<record  id="property_action" model="ir.actions.act_window">
		<field name="name">property action</field>
		<field name="res_model">property</field>

	</record>
	
	
	<record id="property_server_action" model="ir.actions.server">
		<field name="name">X Closed</field>
		<field name="model_id" ref="model_property"/>
		<field name="binding_model_id" ref="model_property"/>
		<field name="state">code</field>
		<field name="code">
			action = records.action_closed()
			</field>

	</record>
	
	
	<record id="check_selling_action" model="ir.cron">
		<field name="name">Property: check Selling</field>
		<field name="model_id" ref="model_property"/>
		<field name="state">code</field>
		<field name="code">model.check_expected_selling_Date()</field>
		<field name="interval_number">1</field>
		<field name="interval_type"></field>
		<field name="numbercall">-1</field>
		<field name="active">True</field>


	</record>
	
	<record  id="property_view_search" model="ir.ui.view">
		<field name="name">property search</field>
		<field name="model">property</field>
		<field name="arch" type="xml"> 
			<search>
				<field name="name"/>
				<field name="postcode"/>
				<field name="data_available"/>
			
			 <filter name="is_garden" string="With Garedn" domain="[('garden','=',True)]"/> 
			<filter name="group_garden" string="Garden" context="{'group_by': 'garden'}"/>
			</search>
		 </field>
		</record>
	
	
	
	<menuitem
	id = "property_menu_item"
	name = "properties"
	parent = "properties_menu"
	action = "property_action"
	/>


</odoo>